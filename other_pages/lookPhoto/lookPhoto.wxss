/* pages/takePhoto/takePhoto.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: auto;
}
.row-flex {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-visible {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}
.page-container {
  display: flex;
  align-items: center;
  width: 750rpx;
  height:100%;
  flex-direction: column;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

@-webkit-keyframes rotate {
  0% {
    -moz-transform: rotate(0deg);
  }

  100% {
    -moz-transform: rotate(360deg);
  }
}

.loading_view {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.loading_bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.2;
}

.loading {
  position: fixed;
  left: 124rpx;
  top: 400rpx;
  width: 500rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 8px;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.loading_img {
  width: 130rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 64rpx;
}

.loading_text {
  font-size: 36rpx;
  color: rgba(39, 39, 39, 1);
  margin-top: 47rpx;
  text-align: center;
}

.take_photo_view {
  width: 750rpx;
  height: 750rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  top: 204rpx;
}

.camera {
  width: 750rpx;
  height: 954rpx;
  position: relative;
}

cover-view {
  line-height: unset;
}

cover-image {
  line-height: unset;
}

.camera-tip {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 750rpx;
}

.camera-device {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 954rpx;
  margin: 0;
  padding: 0;
  z-index: 1;
}

.img_view {
  width: 750rpx;
  position: relative;
  display: flex;
  justify-content: center;
  overflow: scroll;
  flex-direction: column;
}

.camera_img_view {
  width: 750rpx;
  height: 100%;
  overflow: scroll;
}

.camera_img_takePhoto {
  overflow: hidden;
}

.camera_img_choosePhoto {
  overflow: scroll;
}

.camera_img {
  width: 750rpx;
  height: auto;
}

.img_error_view {
  width: 686rpx;
  min-height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: absolute;
  top: 30rpx;
  left: 32rpx;
  background-color: rgba(255,255,255,.4);
  border-radius:8rpx; 
}

.img_error_view2 {
  height: 100%;
  position: relative;
  padding: 25rpx 10rpx;
  border-radius: 8rpx;
  z-index: 1;
  text-align: center;
}

.img_error_imgview {
  width: 100%;
  display: flex;
  align-items:center;
  justify-content: flex-start;
  z-index: 2;
}

.error_tip {
  font-size: 28rpx;
  margin-left: 11rpx;
  color: #343434;
}

.error_img {
  width: 34rpx;
  height: 34rpx;
}

.mask {
  width: 750rpx;
  height: 750rpx;
}
.flash {
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
}

.devicePosition {
  position: absolute;
  right: 32rpx;
  top: 41rpx;
  width: 63rpx;
  height: 55rpx;
}

.tip_view {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 204rpx;
  flex-direction: column;
  background: #fff;
  opacity: 1;
  z-index: 9999999;
}

.tip_index {
  width: 30rpx;
  height: 30rpx;
  background: rgba(5, 196, 240, 1);
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 30rpx;
  border-radius: 50%;
  margin-right: 13rpx;
}

.tip {
  font-size: 26rpx;
  color: rgba(52, 52, 52, 1);
  line-height: 50rpx;
}

.footer {
  position: fixed;
  bottom: 90rpx;
  left: 0;
  width: 100%;
  flex-grow: 1;
  height: 140rpx;
}

.takePhoto {
  width: 136rpx;
  height: 136rpx;
}
.footer-text {
  width: 136rpx;
  height: 136rpx;

  font-size: 32rpx;
  color: #292929;
  text-align: center;
  line-height: 136rpx;
    background-image:url('https://faceshapetemplate.lianglianglive.com/file/fixed/hair2/img/img46.png');
  background-size: 100% 100%;
}

.blu-border {
  width: 248rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 41rpx;
  font-size: 36rpx;
  color: #fff;
  -webkit-text-stroke: 1rpx #010101;
}

.blu-bg {
  width: 136rpx;
  height: 136rpx;
  line-height: 136rpx;
  background-color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
  color: #292929;
  text-align: center;
  border: 4rpx solid #010101;

}

.canvas-view {
  width: 750rpx;
  position: absolute;
  left: 0;
  top: 100%;
}

.rotate-img {
  width: 36rpx;
  height: 42rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  border: 1px solid #eee;
}

.cropper-wrapper {
  position: relative;
  display: flex;
  width: 750rpx;
  height: 954rpx;
  align-items: center;
  justify-content: center;
  background-color: #e5e5e5;
  flex-direction: column;
}

.cropper {
  width: 750rpx;
  height: 894rpx;
  background-color: rgba(0, 0, 0, 0.8);
  margin-top: 60rpx;
}

.corpper-tip {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 60rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 60rpx;
  margin: 0 auto;
  text-align: center;
  background: #434343;
}

.cropper-buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage {
  width: 50%;
  text-align: center;
}
.cp{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
   -webkit-text-stroke: 1rpx #010101;
}
.msg_list{
  width: 40%;
  height: 50rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
}
.msg_list:nth-child(1){
  margin-top: 15rpx;
}
.msg_list_num{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background-color: #D75294;
  text-align: center;
  line-height: 26rpx;
  font-size: 24rpx;
  color: #fff;
  margin-right: 10rpx;
  margin-top: 12rpx;
}
.msg_list_text{
  color:#fff;
  font-size: 24rpx;
  line-height: 50rpx;
}
.msg{
  position: absolute;
  top: 0rpx;
  left:0rpx;
  width: 100%;
  height: 190rpx;
   background: linear-gradient(to bottom, rgba(0,0,0,.5) 0%,rgba(0,0,0,0) 100%);
   z-index: 2;
   overflow: hidden;
}
