.btn{
  width: 620rpx;
  height: 82rpx;
  position: fixed;
  left: 65rpx;
  bottom: 85rpx;
  box-shadow: #999 0 8px 15px -10px;
   border-radius: 6rpx;

}
.btn>text{
  font-size: 36rpx;
  color: #fff;
  display: block;
  text-align: center;
  line-height: 82rpx;
}
page{
  box-shadow:0rpx 6rpx 15rpx RGBA(165, 165, 165, 0.1) inset; 
  background: #f8f8f8;
}
.content{
  width: 100%;
  overflow: hidden;
  margin-top: 60rpx;
  background-color: #fff;
}
.content>text{
  color: #959595;
  font-size: 28rpx;
  padding-left: 53rpx;
  display: block;
  padding-top: 37rpx;
}
.price{
  display: flex;
  margin-left: 104rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 50rpx;
}
.price_content{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 50rpx;
}
.price_content>text{
  color: #959595;
  font-size: 28rpx;
  padding-left: 10rpx;
}
.price_content>input{
  width: 112rpx;
  height: 35rpx;
  border-bottom: 2rpx solid #d2d2d2;
  margin-left: 30rpx;
  color: #959595;
  font-size: 28rpx;
  text-align: right;
}