@import '../../app.wxss';
.tips{
  box-shadow:0rpx 6rpx 15rpx RGBA(165, 165, 165, 0.1) inset; 
  width: 100%;
  height: 106rpx;
  text-align: center;
  line-height: 106rpx;
}
.tips>text{
  font-size: 28rpx;
  color: #292929;
}
page{
   background-color: #f8f8f8
}

.follow_bj{
  overflow: hidden;
  background-color: #f8f8f8;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start;
}
.follow_list{
  display: flex;
  flex-direction:row;
  margin-top:10rpx;
  width: 100%;
  background: #fff;
  height:136rpx; 
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  flex-grow:0;
}
.follow_list>image{
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  display: block;
  margin-left: 28rpx;
}
.follow_list>.follow_staut{
  width: 130rpx;
  height: 50rpx;
  background-color: #FFBD5C;
  font-size: 24rpx;
  color: #fff;
  line-height: 50rpx;
  border-radius: 6rpx;
  text-align: center;
  margin-right: 42rpx;
}
.follow_text{
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left:18rpx;
  overflow: hidden; 
}
.follow_name{
  text-align: left;
  font-size: 32rpx;
  color: #292929;
  width: 400rpx;
  overflow: hidden; 
  white-space: nowrap;
  text-overflow: ellipsis;
}
.follow_label{
  font-size: 24rpx;
  color:#959595;
  padding-top: 10rpx;
  width: 400rpx;
  overflow: hidden; 
  white-space: nowrap;
  text-overflow: ellipsis;
}
.follow_nostaut{
  background-color: #DCDCDC !important;
}

