.layer_mask{
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,.6);
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  overflow: hidden;
  z-index: 999
}
.layer{
  width: 500rpx;
  height: 518rpx;
  position: absolute;
  left: 50%;
  top: 40%;
  margin-left: -250rpx;
  margin-top: -225rpx;
  border-radius: 8rpx;
}
.layer_banner{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: block;
}
.layer_close{
  width:60rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 18rpx;  
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.layer_close_img{
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-left:16rpx;
  margin-top: 16rpx;
}