.layer_mask{
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,.6);
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  overflow: hidden;
  z-index: 999
}
.layer{
 
  position: absolute;
  left: 50%;
  top: 40%;
  margin-left: -275rpx;
  margin-top: -225rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.layer_close{
  width:60rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 18rpx;  
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.active_com{
  width: 549rpx;
  height: 517rpx;
  position: relative;
}
.active_com>image{
  width: 549rpx;
  height: 517rpx;
  display: block;
  position: absolute;
  left:0rpx;
  top: 0rpx;
  z-index: -1;
}
.layer_close_img{
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-left:16rpx;
  margin-top: 16rpx;
}