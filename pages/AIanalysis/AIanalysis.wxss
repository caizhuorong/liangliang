.top{
  width: 100%;
  height: 480rpx;
  position: relative;
  background-color: #D75294;
  overflow: hidden;
}
.top_right_img{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: 25rpx;
  top: 25rpx;
}
.top_right_img>image{
  width: 36rpx;
  height: 42rpx;
  margin-left: 17rpx;
}
.can2{
  position: fixed;
  top: -4000px;
  left: 0rpx;
  width: 500rpx;
  height: 400rpx;
}
.btn{
  width: 620rpx;
  height: 82rpx;
  position: fixed;
  bottom: 47rpx;
  left: 65rpx;
  background-color: #D75294;
  box-shadow:0 0 10px rgba(36, 56,103, .2);  
  border-radius: 8rpx;
}
.btn>text{
  width: 100%;
  text-align: center;
  line-height: 82rpx;
  font-size: 36rpx;
  color: #fff;
  display: block;
}
.top_content{
  margin-top: 65rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.top_content_list{
  width: 200rpx;
  height: 267rpx;
  border-radius: 8rpx;
  border: 3rpx solid #fff;
  overflow: hidden;
}
.top_content_list>image{
  width: 200rpx;
  height: 267rpx;
  border-radius: 8rpx;
}
.top_content_list>text{
  font-size: 24rpx;
  color: #fff;
  display: block;
  text-align: center;
}
.top_content_list:nth-child(2){
  margin-left: 85rpx;
}
.tips_text{
  font-size: 28rpx;
  color: #fff;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}
.bottom_text{
  margin-top: 25rpx;
}
.text_content{
  width: 586rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}
.text_content>text{
  width: 586rpx;
  font-size: 28rpx;
  color: #292929;
  display: block;
  text-align: left;
  padding-bottom: 35rpx;
}
.mask{
  position: fixed;
  z-index: 6;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
  top: 0rpx;
  left: 0rpx;
  overflow: hidden;
}
.content{
  width: 551rpx;
  height: 1090rpx;
  background-color: #fff;
  border-radius: 6rpx;
  position: absolute;
  left: 99.5rpx;
  top: 30rpx;
  overflow: hidden;
}
.content_big_img{
  width: 100%;
  height: 948rpx;
  position: relative;
}
.content_big_img>image{
  width: 100%;
  height: 882rpx;
}
.content_small_img{
  position: absolute;
  bottom: 157rpx;
  left: 210rpx;
  width: 135rpx;
  height: 135rpx;
}
.content_small_img>image{
  width: 135rpx;
  height: 135rpx;
  display: block;
  border-radius: 50%;
}
.conent_btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 142rpx;
}
.share-btn {
  width: 100%;
  height: 100%;
  border: none;
  background: #fff;
  outline: none;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 2;
  opacity: 0;
}
.conent_btn>view{
  width: 50%;
  height: 142rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.conent_btn>view>image{
  width: 44rpx;
  height: 36rpx;
  display: block;
}
.conent_btn>view>text{
  color: #303030;
  font-size:30rpx;
  margin-top: 15rpx;
}
