.textar{
  width: 650rpx;
  height: 570rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #dadada;
  position: relative;
}
.textar>textarea{
  width: 100%;
  height: 100%;
  color: #292929;
  font-size: 28rpx;
}
.textar>view{
  position: absolute;
  right:25rpx;
  bottom:25rpx;
}
.textar>view>text{
  font-size: 20rpx;
  color: #959595;
}
.inp{
  width: 650rpx;
  height: 70rpx;
  border-bottom: 2rpx solid #dadada;
  margin: 0 auto;
  margin-top: 80rpx;
}
.inp>input{
  color: #292929;
  font-size: 28rpx;
}
.btn{
   width: 620rpx;
  height: 82rpx;
  margin: 0 auto;
  box-shadow: #999 0 8px 15px -10px;
   background:linear-gradient(to left, #05c4f0 , #3888f8);
   border-radius: 6rpx;
  margin-top: 80rpx;
}
.btn>text{
  font-size: 36rpx;
  color: #fff;
  display: block;
  text-align: center;
  line-height: 82rpx;
}
.tips{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 190rpx;
}
.tips>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.tips>text{
  font-size: 32rpx;
  color: #292929;
}